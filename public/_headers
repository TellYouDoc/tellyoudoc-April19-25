# Security and Performance Headers Configuration
# This file sets HTTP headers for security, performance, and SEO
# Used by hosting platforms like Netlify, Vercel, and Cloudflare

# Global headers applied to all pages
/*
  # Security Headers - protect against common web vulnerabilities
  
  # X-Frame-Options: DENY - prevents your site from being embedded in iframes
  # Protects against clickjacking attacks
  X-Frame-Options: DENY
  
  # X-Content-Type-Options: nosniff - prevents MIME type sniffing
  # Forces browsers to use the declared content type
  X-Content-Type-Options: nosniff
  
  # Referrer-Policy: strict-origin-when-cross-origin - controls referrer information
  # Sends full URL for same-origin requests, origin only for cross-origin
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions-Policy - controls which browser features can be used
  # camera=(), microphone=(), geolocation=() - blocks these features by default
  # Important for privacy and security in healthcare applications
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # X-XSS-Protection: 1; mode=block - enables XSS protection
  # Blocks pages when XSS attacks are detected
  X-XSS-Protection: 1; mode=block
  
  # Content-Security-Policy - controls which resources can be loaded
  # default-src 'self': only allow resources from same origin
  # script-src: allows scripts from self, inline, eval, and specific CDNs
  # style-src: allows styles from self, inline, and specific CDNs
  # font-src: allows fonts from self and Google Fonts
  # img-src: allows images from self, data URIs, and HTTPS sources
  # connect-src: allows connections to self and HTTPS sources
  # frame-src: allows frames from self only
  # object-src 'none': blocks plugins completely
  # base-uri 'self': restricts base URI to same origin
  # form-action 'self': restricts form submissions to same origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'

# Cache Control Headers - improve performance and SEO

# Favicon files - cache for 1 year (31536000 seconds)
# These rarely change and should be cached aggressively
/favicon/*
  Cache-Control: public, max-age=31536000, immutable

# Static assets - cache for 1 year
# CSS, JS, images that don't change frequently
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files - cache for 1 year
# Improves loading speed for returning visitors
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS files - cache for 1 year
# Stylesheets should be cached aggressively
/*.css
  Cache-Control: public, max-age=31536000, immutable

# HTML files - no caching, always revalidate
# Ensures users always get the latest content
/*.html
  Cache-Control: public, max-age=0, must-revalidate 